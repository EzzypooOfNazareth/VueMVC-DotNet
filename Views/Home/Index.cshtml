@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-mid-10">
        <div class="spa-container">
            <div id="app">
                <div class="row">
                    <h1 class="main-account">{{ accountName }}</h1>
                    <p class="main-detail">{{ fullName }}</p>
                </div>

                <div class="row" style="margin-top: 25px">
                    <div class="col-md-4">
                        <h1 class="main-account">Account Code:</h1>
                    </div>
                    <div class="col-md-4">
                        <p class="main-account-dark">{{ accountCode }}</p>
                    </div>
                </div>

                <div class="row" style="margin-top: 25px">
                    <div class="col-md-4">
                        <h1 class="main-account">Account Type:</h1>
                    </div>
                    <div class="col-md-4">
                        <p class="main-account-dark">{{ lobName }}</p>
                    </div>
                </div>

                <div class="row" style="margin-top: 25px">
                    <div class="col-md-4">
                        <h1 class="main-account">Insurer:</h1>
                    </div>
                    <div class="col-md-4">
                        <p class="main-account-dark">{{ insureAgency }}</p>
                    </div>
                </div>

                <div class="row" style="margin-top: 25px">
                    <button type="button" class="btn btn-primary" v-on:click="toggleHidden">View Details</button>

                    <div v-if="!isHidden" style="margin-top: 10px">
                        <div class="row">
                            <div class="col-md-3">
                                <p>Start Date:</p>
                            </div>
                            <div class="cold-md-3">
                                <p><b>{{ startDate }}</b></p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <p>Expiration Date:</p>
                            </div>
                            <div class="cold-md-3">
                                <p><b>{{ expirationDate }}</b></p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <p>Status:</p>
                            </div>
                            <div class="cold-md-3">
                                <p><b>{{ status }}</b></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Vue-Components/account-component.js"></script>

